{
  "compilerOptions": {
    "noImplicitReturns": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "noUnusedLocals": false,
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": false,
    "strict": false,
    "module": "ESNext",
    "target": "ESNext",
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "paths": {
      "@solana/spl-token": ["./node_modules/@solana/spl-token"],
      "@coral-xyz/anchor": ["./node_modules/@coral-xyz/anchor/dist/esm/index"]
    }
  },
  "compileOnSave": true,
  "include": ["env.d.ts", "src", "examples", "test", "jest.config.js"],
  "exclude": ["node_modules", "dist", "test/reference"]
}
